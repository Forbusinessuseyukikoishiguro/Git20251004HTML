    return os.path.abspath("selenium_complete_test.html")


def main():
    """å…¨æ©Ÿèƒ½ã‚’ä½¿ã£ãŸç·åˆãƒ†ã‚¹ãƒˆ"""
    
    # ãƒ†ã‚¹ãƒˆHTMLã‚’ä½œæˆ
    html_path = create_test_html()
    print(f"ãƒ†ã‚¹ãƒˆHTMLã‚’ä½œæˆã—ã¾ã—ãŸ: {html_path}")
    
    # WebDriverèµ·å‹•
    driver = webdriver.Chrome()
    timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")
    
    try:
        # HTMLãƒ•ã‚¡ã‚¤ãƒ«ã‚’é–‹ã
        driver.get(f"file:///{html_path}")
        print("\nğŸŒ ãƒ†ã‚¹ãƒˆãƒšãƒ¼ã‚¸ã‚’é–‹ãã¾ã—ãŸã€‚")
        time.sleep(2)
        
        # åˆæœŸç”»é¢ã®ã‚¹ã‚¯ãƒªãƒ¼ãƒ³ã‚·ãƒ§ãƒƒãƒˆ
        take_screenshot(driver, f"screenshots/00_initial_{timestamp}.png")
        
        # ===== ã‚¯ãƒªãƒƒã‚¯ãƒ†ã‚¹ãƒˆ =====
        print("\n" + "="*50)
        print("ğŸ“Œ ã‚¯ãƒªãƒƒã‚¯ãƒ†ã‚¹ãƒˆé–‹å§‹")
        print("="*50)
        
        # CSSæŒ‡å®šã§ã‚¯ãƒªãƒƒã‚¯
        click_element_by_css(driver, "#button1")
        time.sleep(1)
        take_screenshot(driver, f"screenshots/01_button1_clicked_{timestamp}.png")
        
        # XPathæŒ‡å®šã§ã‚¯ãƒªãƒƒã‚¯
        click_element_by_xpath(driver, '//button[@class="test-button"]')
        time.sleep(1)
        take_screenshot(driver, f"screenshots/02_button2_clicked_{timestamp}.png")
        
        # ç„¡åŠ¹ãªãƒœã‚¿ãƒ³(ã‚¨ãƒ©ãƒ¼ä¾‹)
        click_element_by_css(driver, "#button3")
        time.sleep(1)
        
        # ===== å…¥åŠ›ãƒ†ã‚¹ãƒˆ =====
        print("\n" + "="*50)
        print("ğŸ“ å…¥åŠ›ãƒ†ã‚¹ãƒˆé–‹å§‹")
        print("="*50)
        
        input_text_by_xpath(driver, '//input[@id="input1"]', "XPathã§å…¥åŠ›ã—ãŸãƒ†ã‚­ã‚¹ãƒˆ")
        time.sleep(1)
        
        input_text_by_css(driver, ".input-field", "CSSã§å…¥åŠ›ã—ãŸãƒ†ã‚­ã‚¹ãƒˆ")
        time.sleep(1)
        take_screenshot(driver, f"screenshots/03_inputs_{timestamp}.png")
        
        # ===== ãƒã‚§ãƒƒã‚¯ãƒœãƒƒã‚¯ã‚¹ãƒ†ã‚¹ãƒˆ =====
        print("\n" + "="*50)
        print("â˜‘ï¸  ãƒã‚§ãƒƒã‚¯ãƒœãƒƒã‚¯ã‚¹ãƒ†ã‚¹ãƒˆé–‹å§‹")
        print("="*50)
        
        check_checkbox_by_css(driver, "#check1")
        time.sleep(1)
        
        check_checkbox_by_css(driver, ".checkbox-item")
        time.sleep(1)
        take_screenshot(driver, f"screenshots/04_checkboxes_{timestamp}.png")
        
        # ===== å¾…æ©Ÿæ©Ÿèƒ½ãƒ†ã‚¹ãƒˆ =====
        print("\n" + "="*50)
        print("â±ï¸  å¾…æ©Ÿæ©Ÿèƒ½ãƒ†ã‚¹ãƒˆ")
        print("="*50)
        
        click_with_wait(driver, "#button1", by_type="css", timeout=5)
        time.sleep(1)
        
        print("\nâœ… å…¨ã¦ã®ãƒ†ã‚¹ãƒˆãŒå®Œäº†ã—ã¾ã—ãŸï¼")
        
    except Exception as e:
        print(f"\nâŒ ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: {e}")
        take_screenshot(driver, f"screenshots/error_{timestamp}.png")
    
    finally:
        time.sleep(3)
        driver.quit()
        print("\nğŸ”š ãƒ–ãƒ©ã‚¦ã‚¶ã‚’é–‰ã˜ã¾ã—ãŸã€‚")


if __name__ == "__main__":
    main()
