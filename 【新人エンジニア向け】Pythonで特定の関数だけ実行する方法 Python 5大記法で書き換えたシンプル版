def method5_example():
    print("\næ–¹æ³•5: ã‚¯ãƒ©ã‚¹ï¼ˆã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆæŒ‡å‘ï¼‰")
    print("-" * 40)
    
    # ã‚¯ãƒ©ã‚¹ã‚’å®šç¾©
    class Shop:
        def __init__(self, name):
            self.name = name  # ãŠåº—ã®åå‰
            self.sales = 0    # å£²ä¸Š
        
        def sell(self, price):
            tax = price * 0.1
            total = price + tax
            self.sales += total
            print(f"{self.name}: {price}å††ã®å•†å“ã‚’è²©å£²ï¼ˆç¨è¾¼{total}å††ï¼‰")
        
        def show_sales(self):
            print(f"{self.name}ã®æœ¬æ—¥ã®å£²ä¸Š: {self.sales}å††")
    
    # ã‚¯ãƒ©ã‚¹ã‹ã‚‰ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
    shop = Shop("ãµã‚ãµã‚å¤§ç¦åº—")
    
    # ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã³å‡ºã™
    shop.sell(300)
    shop.sell(500)
    shop.show_sales()


# ============================================================
# ğŸ° å®Ÿè·µä¾‹: ã†ã•ã†ã•åº—é•·ã®1æ—¥ï¼ˆ5å¤§è¨˜æ³•ã‚’çµ„ã¿åˆã‚ã›ã‚‹ï¼‰
# ============================================================
def usausa_shop_example():
    print("\nğŸ° å®Ÿè·µä¾‹: ã†ã•ã†ã•åº—é•·ã®1æ—¥")
    print("-" * 40)
    
    # ã‚¯ãƒ©ã‚¹ï¼ˆæ–¹æ³•5ï¼‰
    class DaifukuShop:
        def __init__(self):
            self.stock = 0  # åœ¨åº«
            self.sales = 0  # å£²ä¸Š
        
        def make_daifuku(self):
            """é †æ¬¡å‡¦ç†ï¼ˆæ–¹æ³•1ï¼‰"""
            print("ğŸ¥£ ã‚‚ã¡ç±³ã‚’ã“ã­ã“ã­...")
            print("ğŸ«˜ ã‚ã‚“ã“ã‚’ã¤ã‚ã¤ã‚...")
            self.stock = 20
            print(f"âœ¨ å¤§ç¦{self.stock}å€‹å®Œæˆï¼")
        
        def sell_daifuku(self, count):
            """é¸æŠå‡¦ç†ï¼ˆæ–¹æ³•2ï¼‰"""
            if self.stock >= count:
                self.stock -= count
                self.sales += count * 300
                print(f"ğŸ’° å¤§ç¦{count}å€‹è²©å£²ï¼ å£²ä¸Š{count * 300}å††")
            else:
                print("âš ï¸ åœ¨åº«ä¸è¶³ã§ã™")
        
        def show_status(self):
            print(f"ğŸ“Š åœ¨åº«: {self.stock}å€‹ã€å£²ä¸Š: {self.sales}å††")
    
    # ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
    shop = DaifukuShop()
    
    # é †æ¬¡å‡¦ç†
    print("ğŸŒ… é–‹åº—æº–å‚™")
    shop.make_daifuku()
    
    # åå¾©å‡¦ç†ï¼ˆæ–¹æ³•3ï¼‰ï¼š3äººã®ãŠå®¢ã•ã‚“
    customers = [2, 3, 1]  # ãã‚Œãã‚ŒãŒè²·ã†å€‹æ•°
    print("\nğŸ‘¨ ãŠå®¢ã•ã‚“ãŒæ¥åº—")
    for i, count in enumerate(customers, 1):
        print(f"ãŠå®¢ã•ã‚“{i}äººç›®:")
        shop.sell_daifuku(count)
    
    # çµæœè¡¨ç¤º
    print("\nğŸŒ™ é–‰åº—")
    shop.show_status()


